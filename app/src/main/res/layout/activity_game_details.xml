<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GameDetails"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gameDetails_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
        <Button
            android:id="@+id/searchGroupButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="likeImage"
            android:background="@drawable/ic_like"
            android:layout_gravity="bottom|right"
            android:textColor="#fff"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/gameDetails_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>
    <TextView
        android:id="@+id/gameDetails_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>
    <TextView
        android:id="@+id/gameDetails_metacritic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="25dp">
       <TextView
           android:id="@+id/gameDetails_desc"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:layout_marginLeft="25dp"
           android:layout_marginRight="25dp"
           android:layout_marginBottom="25dp"/>

   </ScrollView>
</LinearLayout>